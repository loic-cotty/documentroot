{% extends 'base.html.twig' %}

{% block title %} {{ post }}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-12 mb-2">
            <h2 class="h2">
                {{ post.title }}
            </h2>
            <small class="text-muted">
                <i class="fas fa-clock"></i> Créé le {{ post.createdAt|format_datetime('short') }} <i class="fas fa-clock"></i> Modifié le {{ post.updatedAt|format_datetime('short') }}.
            </small>
        </div>
        <div class="col-12">
            <div class="content">
                {{ post.content }}
            </div>
            <div class="tags">
                <span class="badge badge-info">PHP</span>
                <span class="badge badge-info">Symfony 5</span>
            </div>
        </div>
        <div class="col-12 text-right mt-4">
            <a href="{{ path('blog') }}" class="btn btn-sm btn-primary stretched-link">
                Retour
            </a>
        </div>
    </div>
{% endblock %}
