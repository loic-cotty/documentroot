{% extends 'base.html.twig' %}

{% block title %}{{'blog_title'|trans }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-8">
            <h2 class="mb-5">
                {{ 'last_post'|trans }}
            </h2>
            {% for post in posts %}
                <div class="card border shadow lift mb-3">
                    <div class="card-body">
                        <div class="card-title h4 font-weight-light text-dark">
                            <a class="card-link text-dark" href="{{ path('blog_show', { slug: post.slug }) }}">
                                {{ post.title }}
                            </a>
                        </div>
                        <p class="card-text">
                            {{ post.summary|raw }}
                        </p>
                        <div class="d-flex justify-content-end">
                            <a class="btn btn-info px-4" href="{{ path('blog_show', { slug: post.slug }) }}">
                                Voir
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="col-4">

            <div class="card border shadow mb-3">
                <div class="card-header">
                    Tags
                </div>
                <div class="card-body">
                    Coming Soon...
                </div>
            </div>

            <div class="card border shadow mb-3">
                <div class="card-header">
                    Calendrier
                </div>
                <div class="card-body">
                    Coming soon
                </div>
            </div>
        </div>

    </div>
{% endblock %}
